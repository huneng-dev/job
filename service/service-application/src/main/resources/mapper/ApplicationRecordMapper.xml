<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hjf.job.application.mapper.ApplicationRecordMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="cn.hjf.job.application.entity.ApplicationRecord">
                    <result column="candidate_id" property="candidateId" />
                    <result column="resume_id" property="resumeId" />
                    <result column="position_id" property="positionId" />
                    <result column="status" property="status" />
                    <result column="application_time" property="applicationTime" />
                    <result column="rejection_reason" property="rejectionReason" />
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="columns">
                candidate_id, resume_id, position_id, status, application_time, rejection_reason
        </sql>

</mapper>
